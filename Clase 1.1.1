SELECT first_name, last_name, hire_date
FROM employees
WHERE department_id = 50;

--ASCENDENTE  ASC

SELECT first_name, last_name, hire_date
FROM employees
WHERE department_id = 50
ORDER BY hire_date ASC;

--DESCENDENTE DESC

SELECT DISTINCT department_id
FROM employees
ORDER BY department_id DESC;

--SALARY

SELECT first_name,
last_name,
hire_date,
salary
FROM employees
WHERE department_id = 50
ORDER BY hire_date ASC;

--COMMISSION

SELECT first_name,
last_name,
hire_date,
salary,
(salary + 300)* 12,
commission_PCT 
FROM employees
WHERE department_id = 50
ORDER BY hire_date ASC;

--SALARY + COMMISSION

SELECT first_name,
last_name,
hire_date,
salary,
(salary + 300)*12,
commission_PCT,
salary + commission_PCT
FROM employees
WHERE department_id = 50
ORDER BY hire_date ASC;



