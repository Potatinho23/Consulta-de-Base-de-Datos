--Nombre completo en mayusculas
SELECT UPPER (first_name ||' '|| last_name) "Nombre completo"
FROM employees;

-----------------------------------------------------------------

--Nombre completo en minusculas
SELECT LOWER (first_name ||' '|| last_name) "Nombre completo"
FROM employees;

-----------------------------------------------------------------

--Nombre completo en mayusculas
SELECT UPPER(first_name) ||' '|| LOWER(last_name) "Nombre completo"
FROM employees;

-----------------------------------------------------------------

--Al nombre completo se va a substraer los 4 primeros elementos 
SELECT SUBSTR(UPPER(first_name ||' '|| last_name), 1,4) "Nombre completo"
FROM employees;

-----------------------------------------------------------------

--Ultimos 3 elementos de nombre completo
SELECT SUBSTR(UPPER(first_name ||' '|| last_name), -3,3) "Nombre completo"
FROM employees;

-----------------------------------------------------------------
--Substraer el apellido del nombre completo
SELECT SUBSTR(first_name ||' '|| last_name, LENGTH(first_name )+2,LENGTH(last_name)) "Nombre completo"
FROM employees;

-----------------------------------------------------------------

SELECT LPAD(first_name, 15, '*') "Nombre",
RPAD(last_name, 15, '*') "Apellido"
FROM employees;

