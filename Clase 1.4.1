SELECT
    numrun_emp||'-'||dvrun_emp RUT,
    CASE
        WHEN UPPER(sexo) = 'F' THEN
        'FEMENINO'
        WHEN UPPER(sexo) = 'M' THEN
        'MASCULINO'
    ELSE
        'Se identifica como helicoptero Boeing AH-64 Apache'
    END GENERO
FROM empleado;

